<%- include("./partials/header.ejs") %>
    <h1>Hello world</h1>
    
    <form action="/" method="post">
        <select name="oeuvre" id="oeuvre">
            <option value="">Aucun</option>
            <% if (locals.oeuvres) { %>
             <% oeuvres.forEach(o => { %>
              <option value="<%= o.oeuvre %>"><%= o.oeuvre %></option>
             <% }) %>
            <% } %>
        </select>
        <button type="submit">Filtrer oeuvres</button>
    </form>


    <ul>
        <% if (locals.oeuvres) { %>
         <% oeuvres.forEach(o => { %>
          <li>
            <div>
                <div>
                    <p><%= o.nom %></p>
                    <p><%= o.oeuvre %></p>
                </div>
                <p><%= String(o.date).split("GMT")[0].trim()  %> </p>
            </div>
          </li>
         <% }) %>
        <% } %>
    </ul>
<%- include('./partials/footer.ejs') %>